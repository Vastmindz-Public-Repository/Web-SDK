{
  "root": true,
  "env": {
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "class-methods-use-this": "off",
    "lines-between-class-members": "off",
    "global-require": 0,
    "semi": [2, "never"],
    "no-plusplus": 0,
    "@typescript-eslint/ban-ts-ignore": 0
  }
}